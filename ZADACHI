#include <iostream>
#include <string>
using namespace std;
int main() {
  string input;

cout << "Please enter a string: ";
cin >> input;

if (input == string(input.rbegin(), input.rend())) {
    cout  << " Yes";
}
else{
  cout<<"No";
}
}














